<UserControl x:Class="XDM.Wpf.UI.Dialogs.VideoDownloader.VideoDownloaderPage2"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:XDM.Wpf.UI.Dialogs.VideoDownloader"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ProgressBar IsIndeterminate="True" HorizontalAlignment="Center" Width="200" Height="5"/>
        <Button Grid.Row="1" HorizontalAlignment="Right" Content="{StaticResource ND_CANCEL}" Click="Button_Click"/>
    </Grid>
</UserControl>
