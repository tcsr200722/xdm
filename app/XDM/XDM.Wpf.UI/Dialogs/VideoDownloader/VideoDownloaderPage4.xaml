<UserControl x:Class="XDM.Wpf.UI.Dialogs.VideoDownloader.VideoDownloaderPage4"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:XDM.Wpf.UI.Dialogs.VideoDownloader"
             mc:Ignorable="d" 
            d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="{StaticResource MSG_NO_VIDEO}" TextWrapping="Wrap" TextAlignment="Center" VerticalAlignment="Center"/>
        <Button Grid.Row="1" HorizontalAlignment="Right" Content="{StaticResource MSG_VIDEO_DOWNLOAD_HELP}" Click="Button_Click"/>
    </Grid>
</UserControl>
