<Window x:Class="XDM.Wpf.UI.Dialogs.Updater.UpdaterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XDM.Wpf.UI.Dialogs.Updater"
        mc:Ignorable="d"
        Title="{StaticResource OPT_UPDATE_FFMPEG}" Height="250" Width="500" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="TxtHeading" Text="{StaticResource STAT_DOWNLOADING}" Margin="10" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
        <ProgressBar Name="Prg" IsIndeterminate="False" Grid.Row="1" VerticalAlignment="Top" Height="5" Width="200"/>
        <Button Name="BtnCancel" Content="{StaticResource ND_CANCEL}" Grid.Row="2" HorizontalAlignment="Right" Margin="10" Padding="10,3"/>
    </Grid>
</Window>
